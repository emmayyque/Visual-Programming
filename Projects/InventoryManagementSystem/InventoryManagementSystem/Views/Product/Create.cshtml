@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
    ViewData["Title"] = "Dashboard | Add New Product";
}

@model AddProduct;

<div class="container mt-5">
    <div class="card border-rounded border-1 shadow-sm col-sm-12 col-lg-5 m-auto">
        <div class="bg-black text-light p-3 mb-3">
            <h2 class="text-center display-6 fw-bold">Product Form</h2>
        </div>
        <form class="px-5 py-4" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" asp-for="Name">
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea class="form-control" name="Description" id="Description" asp-for="Description" row="7"></textarea>
            </div>
            <div class="mb-3">
                <label for="Quantity" class="form-label">Quantity</label>
                <input type="number" class="form-control" id="Quantity" name="Quantity" asp-for="Quantity">
            </div>
            <div class="mb-3">
                <label for="UnitPrice" class="form-label">Unit Price</label>
                <input type="number" class="form-control" id="UnitPrice" name="UnitPrice" asp-for="UnitPrice">
            </div>
            <div class="d-flex align-items-center justify-content-center">
                <button type="submit" class="btn btn-primary">Add Product</button>
            </div>
        </form>
    </div>
</div>