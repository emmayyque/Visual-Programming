@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

@{
    var userRole = HttpContextAccessor.HttpContext.Session.GetInt32("UserRole");
}


<div class="d-flex gap-3 p-4">
    @if ( userRole == 1 )
    {
        <div class="card col-3 p-3 bg-dark text-light justify-content-between align-items-start shadow-sm flex-row" style="height: 150px;">
            <div class="d-flex align-items-start justify-content-between flex-column h-100">
                <h2 class="fs-5">Users</h2>
                <h1 class="fs-1 fw-bold">@ViewBag.UsersCount</h1>
            </div>
            <div class="bg-light rounded-circle p-4 d-flex align-items-center justify-content-center overflow-hidden" style="width: 50px; height: 50px;">
                <i class="fa fa-user fs-2 text-dark"></i>
            </div>
        </div>
    }
    <div class="card col-3 p-3 bg-dark text-light justify-content-between align-items-start shadow-sm flex-row" style="height: 150px;">
        <div class="d-flex align-items-start justify-content-between flex-column h-100">
            <h2 class="fs-5">Products</h2>
            <h1 class="fs-1 fw-bold">@ViewBag.ProductsCount</h1>
        </div>
        <div class="bg-light rounded-circle p-4 d-flex align-items-center justify-content-center overflow-hidden" style="width: 50px; height: 50px;">
            <i class="fa fa-box fs-2 text-dark"></i>
        </div>
    </div>
</div>