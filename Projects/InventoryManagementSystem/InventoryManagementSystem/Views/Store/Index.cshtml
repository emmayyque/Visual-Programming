@{

}

@model List<Product>;

<div class="container">
    <div class="d-flex align-items-stretch justify-content-start gap-4">
        @foreach (var product in Model)
        {
            <div class="card shadow-sm" style="width: 18rem;">
                <div class="card-body p-0">
                    <h5 class="card-title text-light fw-bold bg-dark px-3 py-2">@product.Name</h5>
                    <p class="card-text text-secondary px-3 py-2">@product.Description</p>
                    <div class="d-flex flex-column align-items-end  px-3 py-2 gap-1">
                        <p class="text-success fw-bold fs-4 m-0">@product.UnitPrice Rs</p>
                        <p class="m-0">@product.Quantity (Left in Stock)</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>