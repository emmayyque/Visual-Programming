@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
    ViewData["Title"] = "Dashboard | Edit User";
}

@model User;

<div class="container mt-5 mx-auto">
    <div class="card border-rounded border-1 shadow-sm col-sm-12 col-lg-5 m-auto">
        <div class="bg-dark text-light p-3">
            <h2 class="text-center display-6 fw-bold">Edit User Details</h2>
        </div>
        <form class="px-5 py-4" method="post">
            <input type="hidden" class="form-control" id="Id" name="Id" asp-for="Id">
            <div class="mb-3">
                <label for="FirstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" asp-for="FirstName" >
            </div>
            <div class="mb-3">
                <label for="LastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="LastName" name="LastName" asp-for="LastName">
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="Email" name="Email" asp-for="Email">
            </div>
            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input type="text" class="form-control" id="Username" name="Username" asp-for="Username">
            </div>
            <div class="mb-4">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" asp-for="Password">
            </div>
            <div class="d-flex align-items-center justify-content-center">
                <button type="submit" class="btn btn-primary">Save User</button>
            </div>
        </form>
    </div>
</div>