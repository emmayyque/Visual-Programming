    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Edit Product";
}

@model Product;

<div class="container">
    <div class="mt-3">
        <div class="d-flex align-items-center justify-content-between ">
            <h2 class="display-5 fw-bolder text-center">Edit Product</h2>
            <a class="btn btn-primary" asp-action="Index">Back to Main</a>
        </div>
        <form method="post">
            <input type="hidden" name="Id" id="Id" asp-for="Id" readonly class="form-control" />
            <div class="my-2 from-group">
                <label for="Name">Product Name</label>
                <input type="text" name="Name" id="Name" asp-for="Name" class="form-control" />
            </div>
            <div class="my-2 from-group">
                <label for="Description">Product Description</label>
                <input type="text" name="Description" id="Description" asp-for="Description" class="form-control" />
            </div>
            <div class="my-2 from-group">
                <label for="Quantity">Product Quantity</label>
                <input type="text" name="Quantity" id="Quantity" asp-for="Quantity" class="form-control" />
            </div>
            <div class="d-flex align-items-center justify-content-center gap-3 ">
                <button type="submit" class="btn btn-primary w-25">Edit</button>
            </div>
        </form>
    </div>
</div>