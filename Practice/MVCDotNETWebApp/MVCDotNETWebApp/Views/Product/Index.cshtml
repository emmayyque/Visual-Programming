@using MVCDotNETWebApp.Models.Entities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Products Page";
}

@model List<Product>;

<div class="container">
    <div class="mt-3">
        <div class="d-flex align-items-center justify-content-between ">
            <h2 class="display-5 fw-bolder text-center">Products List</h2>
            <a class="btn btn-primary" asp-action="Create">Add Product</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@product.Quantity</td>
                        <td class="d-flex align-items-center justify-content-center gap-3">
                            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@product.Id">Edit</a>
                            <form method="post" asp-action="Delete" asp-route-id="@product.Id">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

