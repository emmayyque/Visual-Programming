@{
    ViewData["Title"] = "Album View";
}

@model List<Album>

<div class="container">
    <h1>Albums</h1>
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Album ID</th>
                <th>Title</th>
                <th>User ID</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var album in Model)
            {
                <tr>
                    <th>@album.Id</th>
                    <th>@album.Title</th>
                    <th>@album.UserId</th>
                    <td class="d-flex align-items-center justify-content-center gap-2">
                        <a class="btn btn-primary">Edit</a> |
                        <a class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>