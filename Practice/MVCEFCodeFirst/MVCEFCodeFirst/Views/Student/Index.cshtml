@using MVCEFCodeFirst.Models.Entities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Student";
}

@model List<Student> 

<div class="container">
    <div class="card shadow-sm">
        <div class="d-flex align-items-center justify-content-between p-3 bg-dark">
            <h1 class="display-6 text-white fw-bolder">Students List</h1>
            <a class="btn btn-primary d-flex align-items-center justify-content center gap-2" asp-controller="Student" asp-action="Create"><i class="fa-solid fa-plus"></i>Add Student</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@student.Id</td>
                            <td>@student.Name</td>
                            <td>@student.Email</td>
                            <td>@student.Gender</td>
                            <td>
                                <a class="btn btn-warning btn-sm text-white" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id"><i class="fa-solid fa-pen-to-square mx-1"></i>Edit</a> | 
                                <form method="post" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id" class="d-inline">
                                    <div class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash mx-1"></i>Delete</button>
                                    </div>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    Swal.fire({
        title: "Good job!",
        text: "You clicked the button!",
        icon: "success"
    });
</script>