@using ConsumeWebAPIsByLinqToJson.Models.Entities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Photos Restfull API";
}

@model List<Photo>
<div class="container">
    <h1>Photos</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>URL</th>
                <th>Thumbnail URL</th>
                <th>Album Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var photo in Model)
            {
                <tr>
                    <td>@photo.Id</td>
                    <td>@photo.Title</td>
                    <td>@photo.Url</td>
                    <td>@photo.ThumbnailUrl</td>
                    <td>@photo.AlbumId</td>
                    <td class="d-flex align-items-center justify-content-center gap-2">
                        <a class="btn btn-primary">Edit</a> |
                        <a class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
